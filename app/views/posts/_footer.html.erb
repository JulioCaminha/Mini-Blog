<%= form_for Post.new do |f| %>
  
  <% if user_signed_in? %>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_area :author,:rows => "1", :value => current_user.username , :readonly => true %>
  </div>

  <% else %>
    <div class="field">
    <%= f.label :author %><br>
    <%= f.text_area :author,:rows => "1", :value => "anonymous", :readonly => true %>
  </div>

  <% end %>
  
  <div class="field">
    <%= f.label :text %><br>
    <%= f.text_area :text, :cols => "50", :rows => "5", :maxlength => 500 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>